<!DOCTYPE html>
<html>
<head>
  <title>YukiV</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/items">YukiV</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Referentie lijst", items_path %></li>
            <li><%= link_to "Producten", products_path %></li>
            <li class="dropdown">
              <a class="dropdown-toggle" id="drop3" role="button" data-toggle="dropdown" href="#">Programmas<b class="caret"></b></a>
              <ul id="menu0" class="dropdown-menu" role="menu" aria-labelledby="drop3">
                <li role="presentation"><%= link_to "Inkomend", scan_items_incoming_path, "role" => "menuitem", "tabindex" => "-1" %></li>
                <li role="presentation"><%= link_to "In magazijn", scan_items_warehouse_in_path , "role" => "menuitem", "tabindex" => "-1" %></li>
                <li role="presentation"><%= link_to "Uit magazijn", scan_items_warehouse_out_path, "role" => "menuitem", "tabindex" => "-1" %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <%= msg  %>
    </div>
  <% end %>

	<%= yield %>

</body>
</html>
