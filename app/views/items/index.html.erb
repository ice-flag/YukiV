<h4>Import Reference List</h4>

<%= form_tag import_items_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<%- model_class = Item -%>

<hr />
  <p><%= link_to "Download ref list", items_path(format: "csv") %></p>
<hr />
<h4>Quick search</h4>
<%= form_tag('/items', method: :get) do %>

<%= text_field_tag :search %>
<%= submit_tag "search" %>

<% end %>

<hr />
<h4>Asmet search</h4>
<%= form_tag('/items', method: :get) do %>

<%= text_field_tag :psearch, '', autofocus: true %>
<%= submit_tag "search" %>

<% end %>


<% if @item.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:reference_number) %></th>
        <th>Aantal</th>
        <th>ean</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.id, item_path(item) %></td>
          <td><%= item.reference_number %></td>
          <td><%= item.products.count %></td>
          <td><%= item.ean %></td>
          <td>
            <%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.hidden_field :status, :value => 1 %>
              <%= f.hidden_field :active, :value => false %>
              <%= f.submit "Voeg nieuw product toe", :name => "psearch", :class => 'btn btn-primary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th>Aantal</th>
        <th><%= model_class.human_attribute_name(:reference_number) %></th>
        <th><%= model_class.human_attribute_name(:asmeth) %></th>
        <th><%= model_class.human_attribute_name(:price) %></th>
        <th><%= model_class.human_attribute_name(:item_type) %></th>
        <th><%= model_class.human_attribute_name(:bosal) %></th>
        <th><%= model_class.human_attribute_name(:walker) %></th>
        <th><%= model_class.human_attribute_name(:ets) %></th>
        <th>ean</th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.id, item_path(item) %></td>
          <td><%= item.products.count %></td>
          <td><%= item.reference_number %></td>
          <td><%= item.asmeth %></td>
          <td><%= item.price %></td>
          <td><%= item.item_type %></td>
          <td><%= item.bosal %></td>
          <td><%= item.walker %></td>
          <td><%= item.ets %></td>
          <td><%= item.ean %></td>
          <td><%=l item.created_at %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_item_path(item), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        item_path(item),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_path,
            :class => 'btn btn-primary' %>