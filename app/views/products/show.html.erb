<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @product.status %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reference_number) %>:</strong></dt>
  <dd><%= Item.find(@product.item_id).reference_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:asmeth) %>:</strong></dt>
  <dd><%= @Item.find(@product.item_id).asmeth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @Item.find(@product.item_id).price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_type) %>:</strong></dt>
  <dd><%= @Item.find(@product.item_id).item_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bosal) %>:</strong></dt>
  <dd><%= @Item.find(@product.item_id).bosal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:walker) %>:</strong></dt>
  <dd><%= @Item.find(@product.item_id).walker %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ets) %>:</strong></dt>
  <dd><%= @Item.find(@product.item_id).ets %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              item_path(@product.item_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_path(@product), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>